<canvas id="sign-canvas" 
  {{did-insert this.createSignaturePad}} 
  {{will-destroy (action this.removeSignaturePad)}}
  style='width:100%; height:100%; border:2px solid #95a5a6; border-style:dashed;'
  ></canvas>
<table style='width:100%;'>
  <tr>
    <td align='left'>
      <button class='{{this.backBtnClass}}' {{action this.back}}>{{this.backBtnText}}</button>
    </td>
    <td align='center'>
      <button class='{{this.clearBtnClass}}' {{action this.clear}}>{{this.clearBtnText}}</button>
    </td>
    <td align='right'>
      <button class='{{this.acceptBtnClass}}' {{action this.accept}}>{{this.acceptBtnText}}</button>
    </td>
  </tr>
</table>
